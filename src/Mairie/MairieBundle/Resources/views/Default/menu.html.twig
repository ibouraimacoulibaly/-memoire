<nav id="adminmenu">
    <ul class="top-menu">
     <li class="{% if route!='ben_dashboard' %}not-{% endif %}current"><a href=""><span class="glyphicon glyphicon-home"></span> <span class="menu-title">Acceuil</span></a></li>
      
        {% if not is_granted("ROLE_MANAGER") or is_granted("ROLE_ADMIN") %}
         <li class="{% if route not in personMenu %}not-{% endif %}current"><a href=""><span class="glyphicon glyphicon-stats block"></span> <span class="menu-title">Statistique</span></a>
