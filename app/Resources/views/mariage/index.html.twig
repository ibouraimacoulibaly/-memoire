
{% extends "@MairieMairie//layout.html.twig" %}
{% block body %}
    <h1>Mariages list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomepoux</th>
                <th>Prenomepoux</th>
                <th>Datenaissanceepoux</th>
                <th>Lieunaissanceepoux</th>
                <th>Addresseepoux</th>
                <th>Nomepouse</th>
                <th>Prenomepouse</th>
                <th>Datenaissanceepouse</th>
                <th>Lieunaissanceepouse</th>
                <th>Addresseepouse</th>
                <th>Datemariage</th>
                <th>Lieumariage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mariage in mariages %}
            <tr>
                <td><a href="{{ path('mariage_show', { 'id': mariage.id }) }}">{{ mariage.id }}</a></td>
                <td>{{ mariage.nomEpoux }}</td>
                <td>{{ mariage.prenomEpoux }}</td>
                <td>{% if mariage.dateNaissanceEpoux %}{{ mariage.dateNaissanceEpoux|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ mariage.lieuNaissanceEpoux }}</td>
                <td>{{ mariage.addresseEpoux }}</td>
                <td>{{ mariage.nomEpouse }}</td>
                <td>{{ mariage.prenomEpouse }}</td>
                <td>{% if mariage.dateNaissanceEpouse %}{{ mariage.dateNaissanceEpouse|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ mariage.lieuNaissanceEpouse }}</td>
                <td>{{ mariage.addresseEpouse }}</td>
                <td>{% if mariage.dateMariage %}{{ mariage.dateMariage|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ mariage.lieuMariage }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('mariage_show', { 'id': mariage.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('mariage_edit', { 'id': mariage.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mariage_new') }}">Create a new mariage</a>
        </li>
    </ul>
{% endblock %}
