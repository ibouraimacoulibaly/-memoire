
{% extends "@MairieMairie//layout.html.twig" %}
{% block body %}
    <h3><span class="glyphicon glyphicon-user"></span>liste des mariage</h3>
<form  id="jsForm" role="form" method="post" action="">
        <input id="pagenumber" type="hidden" name="searchParam[page]" value="1"> 
        <input id="sortBy" type="hidden" name="searchParam[sortBy]" value="all"> 
        <input id="sortDir" type="hidden" name="searchParam[sortDir]" value="ASC"> 

        <div class="row hidden-print">
          <div class="col-md-5 form-group">
            <div class="input-group">
              <input type="text" name="searchParam[keyword]" class="form-control" placeholder="Search">
              <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
              </div><!-- /btn-group -->
            </div><!-- /input-group -->
          </div><!-- /.col-md-6 -->
          <div class="col-md-7">
            <div class="btn-group pull-right">                       
              <button class="btn btn-primary "><span class="glyphicon glyphicon-cog"></span>  Selectioner une action</button>
              <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#" data-toggle="modal" data-target="#searchModal"><span class="glyphicon glyphicon-search"></span> Recherche avanc√©e</a></li>
                <li><a href="{{ path('mariage_new') }}"><span class="glyphicon glyphicon-plus"></span> Ajouter</a></li>

                <li><a href="#" id="js-delete"><span class="glyphicon glyphicon-trash"></span> Supprimer</a></li>
              </ul>
            </div>
          </div>
        </div>

    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomepoux</th>
                <th>Prenomepoux</th>
                <th>Datenaissanceepoux</th>
                <th>Lieunaissanceepoux</th>
                <th>Addresseepoux</th>
                <th>Nomepouse</th>
                <th>Prenomepouse</th>
                <th>Datenaissanceepouse</th>
                <th>Lieunaissanceepouse</th>
                <th>Addresseepouse</th>
                <th>Datemariage</th>
                <th>Lieumariage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mariage in mariages %}
            <tr>
                <td><a href="{{ path('mariage_show', { 'id': mariage.id }) }}">{{ mariage.id }}</a></td>
                <td>{{ mariage.nomEpoux }}</td>
                <td>{{ mariage.prenomEpoux }}</td>
                <td>{% if mariage.dateNaissanceEpoux %}{{ mariage.dateNaissanceEpoux|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ mariage.lieuNaissanceEpoux }}</td>
                <td>{{ mariage.addresseEpoux }}</td>
                <td>{{ mariage.nomEpouse }}</td>
                <td>{{ mariage.prenomEpouse }}</td>
                <td>{% if mariage.dateNaissanceEpouse %}{{ mariage.dateNaissanceEpouse|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ mariage.lieuNaissanceEpouse }}</td>
                <td>{{ mariage.addresseEpouse }}</td>
                <td>{% if mariage.dateMariage %}{{ mariage.dateMariage|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ mariage.lieuMariage }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('mariage_show', { 'id': mariage.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('mariage_edit', { 'id': mariage.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mariage_new') }}">Create a new mariage</a>
        </li>
    </ul>
{% endblock %}
