
{% extends "@MairieMairie//layout.html.twig" %}
{% block body %}
    <h1>Communes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomcommune</th>
                <th>Addressecommune</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commune in communes %}
            <tr>
                <td><a href="{{ path('commune_show', { 'id': commune.id }) }}">{{ commune.id }}</a></td>
                <td>{{ commune.nomCommune }}</td>
                <td>{{ commune.addresseCommune }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('commune_show', { 'id': commune.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('commune_edit', { 'id': commune.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('commune_new') }}">Create a new commune</a>
        </li>
    </ul>
{% endblock %}
